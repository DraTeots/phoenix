{
  "name": "phoenix-ng",
  "version": "2.12.0",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve phoenix-app",
    "start:ssl": "ng serve phoenix-app --ssl --host 0.0.0.0",
    "start:single": "ng serve phoenix-app --configuration singleEvent",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "build:ui-components": "ng build phoenix-ui-components --configuration production",
    "test": "jest --no-cache",
    "test:coverage": "yarn test --coverage",
    "test:ci": "yarn test:coverage --maxWorkers=2 --silent",
    "e2e": "ng e2e",
    "prettier": "prettier --config ../../.prettierrc --ignore-path ../../.prettierignore",
    "prettier:check": "yarn prettier --check .",
    "prettier:write": "yarn prettier --write .",
    "eslint": "eslint projects/**/*.ts --ignore-path ../../.gitignore",
    "eslint:fix": "yarn eslint --fix",
    "deploy": "mv ../../docs/api-docs ../../api-docs && yarn build:prod --output-path ../../docs --base-href \"/phoenix/\" && cp ../../docs/index.html ../../docs/404.html && mv ../../api-docs ../../docs/api-docs",
    "//": "Running tests only for phoenix-ui-components because of bug in phoenix-app tests",
    "version": "yarn deploy phoenix-app",
    "deploy:web": "yarn build:prod phoenix-app --output-path ./docs --base-href \"./\" && cp ./docs/index.html ./docs/404.html",
    "deploy:web:single": "ng build phoenix-app --configuration singleEvent --output-path ./docs --base-href \"./\" && cp ./docs/index.html ./docs/404.html"
  },
  "dependencies": {
    "@angular/animations": "^15.0.4",
    "@angular/cdk": "^15.0.3",
    "@angular/common": "^15.0.4",
    "@angular/compiler": "^15.0.4",
    "@angular/core": "^15.0.4",
    "@angular/forms": "^15.0.4",
    "@angular/material": "^15.0.3",
    "@angular/platform-browser": "^15.0.4",
    "@angular/platform-browser-dynamic": "^15.0.4",
    "@angular/router": "^15.0.4",
    "css-element-queries": "^1.2.3",
    "cypress-plugin-snapshots": "^1.4.4",
    "ngx-slider-v2": "^15.0.3",
    "phoenix-event-display": "^2.12.0",
    "phoenix-ui-components": "^2.12.0",
    "qrcode": "1.5.1",
    "rxjs": "^7.8.0",
    "three": "^0.148.0",
    "tslib": "^2.5.0",
    "typescript": "4.8.4",
    "zone.js": "^0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.0.4",
    "@angular-devkit/build-ng-packagr": "~0.1002.0",
    "@angular/cli": "~15.0.4",
    "@angular/compiler-cli": "~15.0.4",
    "@angular/language-service": "^15.0.4",
    "@types/cypress": "^1.1.3",
    "@types/qrcode": "1.5.0",
    "concurrently": "^7.6.0",
    "cypress": "^12.4.0",
    "jest": "^29.4.1",
    "jest-preset-angular": "12.2.6",
    "ng-packagr": "^15.1.1"
  }
}
